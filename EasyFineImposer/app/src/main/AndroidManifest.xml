<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hasi.easyfineimposer" >

    <!-- SmS Permissions -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- permission to check connectivity -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendSMS"
            android:label="@string/title_activity_send_sms" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".Get_Cloud_Data"
            android:label="@string/title_activity_cloud__location_" >
        </activity>
        <activity
            android:name=".Impose_Fines"
            android:label="@string/title_activity_impose__fines" >
        </activity>
        <activity
            android:name=".ViewImposedFines"
            android:label="@string/title_activity_view_imposed_fines" >
        </activity>
        <activity
            android:name=".ChangePassword"
            android:label="@string/title_activity_change_password" >
        </activity>
    </application>

</manifest>
