<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back1">
    tools:context="com.hasi.easyfineimposer.ChangePassword">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:hint="User Name"
        android:minWidth="80dp"
        android:nestedScrollingEnabled="false"
        android:minHeight="60dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newUserText"
        android:hint="New User Name"
        android:minWidth="80dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/userNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="60dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/oldPwText"
        android:hint="Old Password"
        android:minWidth="80dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/newUserText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="60dp"
        android:password="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPwText"
        android:hint="New Password"
        android:minWidth="80dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/oldPwText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="60dp"
        android:password="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confPwText"
        android:hint="Confirm New Password"
        android:minWidth="80dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/newPwText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="60dp"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/pwButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/confPwText"
        android:layout_alignEnd="@+id/confPwText"
        android:onClick="onPasswordChangeClick"
        android:nestedScrollingEnabled="false" />
</RelativeLayout>
